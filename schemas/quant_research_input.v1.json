{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pointline.dev/schemas/quant_research_input.v1.json",
  "title": "QuantResearchInputV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "request_id",
    "objective",
    "universe",
    "time_range",
    "data_requirements",
    "constraints",
    "evaluation"
  ],
  "properties": {
    "schema_version": {
      "const": "1.0"
    },
    "request_id": {
      "type": "string",
      "minLength": 3
    },
    "persona_mode": {
      "type": "string",
      "enum": ["AUTO", "HFT", "MFT"],
      "default": "AUTO"
    },
    "objective": {
      "type": "string",
      "minLength": 10
    },
    "universe": {
      "type": "object",
      "additionalProperties": false,
      "required": ["exchange", "symbols"],
      "properties": {
        "exchange": {
          "type": "string",
          "minLength": 2
        },
        "symbols": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true
        },
        "asset_class": {
          "type": "string",
          "enum": ["crypto", "crypto-spot", "crypto-derivatives", "stocks-cn"]
        }
      }
    },
    "time_range": {
      "type": "object",
      "additionalProperties": false,
      "required": ["start", "end", "timezone"],
      "properties": {
        "start": {
          "type": "string",
          "description": "ISO-8601 date or datetime"
        },
        "end": {
          "type": "string",
          "description": "ISO-8601 date or datetime"
        },
        "timezone": {
          "type": "string",
          "minLength": 1,
          "default": "UTC"
        }
      }
    },
    "data_requirements": {
      "type": "object",
      "additionalProperties": false,
      "required": ["tables"],
      "properties": {
        "tables": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "trades",
              "quotes",
              "book_snapshot_25",
              "derivative_ticker",
              "kline_1h",
              "szse_l3_orders",
              "szse_l3_ticks"
            ]
          },
          "uniqueItems": true
        },
        "probe_window_minutes": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1440,
          "default": 5
        },
        "min_probe_rows": {
          "type": "integer",
          "minimum": 0,
          "default": 1
        }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": ["pit_timeline", "forbid_lookahead", "cost_model"],
      "properties": {
        "pit_timeline": {
          "type": "string",
          "enum": ["ts_local_us", "ts_exch_us"],
          "default": "ts_local_us"
        },
        "forbid_lookahead": {
          "type": "boolean",
          "default": true
        },
        "cost_model": {
          "type": "object",
          "additionalProperties": false,
          "required": ["fees_bps", "slippage_bps"],
          "properties": {
            "fees_bps": { "type": "number", "minimum": 0 },
            "slippage_bps": { "type": "number", "minimum": 0 },
            "funding_included": { "type": "boolean", "default": false }
          }
        }
      }
    },
    "evaluation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["metrics", "split_method"],
      "properties": {
        "metrics": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "sharpe",
              "sortino",
              "max_drawdown",
              "hit_rate",
              "turnover",
              "information_ratio",
              "pnl_net_bps"
            ]
          },
          "uniqueItems": true
        },
        "split_method": {
          "type": "string",
          "enum": ["fixed", "rolling", "walk_forward"]
        },
        "regime_slices": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["volatility", "trend", "session", "funding_regime", "liquidity"]
          },
          "uniqueItems": true
        }
      }
    },
    "deliverables": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "output_format": {
          "type": "string",
          "enum": ["json", "markdown", "both"],
          "default": "both"
        },
        "include_artifacts": {
          "type": "boolean",
          "default": true
        }
      }
    }
  }
}
