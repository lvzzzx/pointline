{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pointline.dev/schemas/quant_research_workflow_output.v2.json",
  "title": "QuantResearchWorkflowOutputV2",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "request_id",
    "workflow_id",
    "run",
    "resolved_plan",
    "stage_runs",
    "quality_gates",
    "results",
    "decision",
    "artifacts"
  ],
  "properties": {
    "schema_version": {
      "const": "2.0"
    },
    "request_id": {
      "type": "string",
      "minLength": 3
    },
    "workflow_id": {
      "type": "string",
      "minLength": 3
    },
    "run": {
      "type": "object",
      "additionalProperties": false,
      "required": ["workflow_run_id", "started_at", "completed_at", "status"],
      "properties": {
        "workflow_run_id": { "type": "string", "minLength": 3 },
        "started_at": { "type": "string", "format": "date-time" },
        "completed_at": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["success", "partial", "failed"] }
      }
    },
    "resolved_plan": {
      "type": "object",
      "additionalProperties": false,
      "required": ["workflow_id", "final_stage_id", "stage_order", "stages", "config_hash"],
      "properties": {
        "workflow_id": { "type": "string", "minLength": 1 },
        "final_stage_id": { "type": "string", "minLength": 1 },
        "stage_order": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "stages": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["stage_id", "mode", "depends_on", "outputs"],
            "properties": {
              "stage_id": { "type": "string", "minLength": 1 },
              "mode": {
                "type": "string",
                "enum": ["event_joined", "tick_then_bar", "bar_then_feature"]
              },
              "depends_on": {
                "type": "array",
                "items": { "type": "string", "minLength": 1 }
              },
              "outputs": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              }
            }
          }
        },
        "config_hash": { "type": "string", "minLength": 8 }
      }
    },
    "stage_runs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "stage_id",
          "mode",
          "status",
          "started_at",
          "completed_at",
          "config_hash",
          "row_count",
          "columns",
          "gate_summary",
          "artifact_refs"
        ],
        "properties": {
          "stage_id": { "type": "string", "minLength": 1 },
          "mode": {
            "type": "string",
            "enum": ["event_joined", "tick_then_bar", "bar_then_feature"]
          },
          "status": { "type": "string", "enum": ["success", "failed"] },
          "started_at": { "type": "string", "format": "date-time" },
          "completed_at": { "type": "string", "format": "date-time" },
          "config_hash": { "type": "string", "minLength": 8 },
          "row_count": { "type": "integer", "minimum": 0 },
          "columns": {
            "type": "array",
            "items": { "type": "string" }
          },
          "gate_summary": {
            "type": "object",
            "additionalProperties": false,
            "required": ["failed_gates", "pit_violations", "unassigned_rows"],
            "properties": {
              "failed_gates": {
                "type": "array",
                "items": { "type": "string" }
              },
              "pit_violations": { "type": "integer", "minimum": 0 },
              "unassigned_rows": { "type": "integer", "minimum": 0 }
            }
          },
          "artifact_refs": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "quality_gates": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "lineage_completeness_check",
        "reference_resolution_check",
        "schema_compatibility_check",
        "stage_gate_failures",
        "failed_gates"
      ],
      "properties": {
        "lineage_completeness_check": {
          "type": "object",
          "required": ["passed"],
          "properties": {
            "passed": { "type": "boolean" },
            "missing": { "type": "array", "items": { "type": "string" } }
          }
        },
        "reference_resolution_check": {
          "type": "object",
          "required": ["passed"],
          "properties": {
            "passed": { "type": "boolean" },
            "errors": { "type": "array", "items": { "type": "string" } }
          }
        },
        "schema_compatibility_check": {
          "type": "object",
          "required": ["passed"],
          "properties": {
            "passed": { "type": "boolean" },
            "errors": { "type": "array", "items": { "type": "string" } }
          }
        },
        "stage_gate_failures": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["stage_id", "failed_gates"],
            "properties": {
              "stage_id": { "type": "string", "minLength": 1 },
              "failed_gates": {
                "type": "array",
                "items": { "type": "string", "minLength": 1 }
              }
            }
          }
        },
        "failed_gates": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "results": {
      "type": "object",
      "additionalProperties": false,
      "required": ["final_stage_id", "row_count", "columns", "metrics"],
      "properties": {
        "final_stage_id": { "type": "string", "minLength": 1 },
        "row_count": { "type": "integer", "minimum": 0 },
        "columns": {
          "type": "array",
          "items": { "type": "string" }
        },
        "metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "value"],
            "properties": {
              "name": { "type": "string" },
              "value": { "type": "number" }
            }
          }
        },
        "preview": {
          "type": "array",
          "items": { "type": "object" }
        }
      }
    },
    "decision": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status", "rationale", "next_actions"],
      "properties": {
        "status": { "type": "string", "enum": ["go", "revise", "reject"] },
        "rationale": { "type": "string", "minLength": 1 },
        "risks": { "type": "array", "items": { "type": "string" } },
        "next_actions": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": false,
      "required": ["config_hash", "paths", "lineage"],
      "properties": {
        "config_hash": { "type": "string", "minLength": 8 },
        "paths": {
          "type": "array",
          "items": { "type": "string" }
        },
        "lineage": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["stage_id", "output_name", "row_count", "columns"],
            "properties": {
              "stage_id": { "type": "string", "minLength": 1 },
              "output_name": { "type": "string", "minLength": 1 },
              "row_count": { "type": "integer", "minimum": 0 },
              "columns": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "stage_artifacts": {
          "type": "object"
        }
      }
    }
  }
}
